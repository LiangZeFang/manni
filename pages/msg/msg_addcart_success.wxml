<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <image src="/images/icon/addcart_success.png" style="width: 256rpx !important; height: 256rpx;"></image>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">操作成功</view>
            <view class="weui-msg__desc">商品已添加到购物车，您可进入购物车进行下单结算或返回商城继续购物</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type="primary" bindtap="gocart">进入购物车结算</button>
                <button class="weui-btn" type="default" bindtap="goindex">返回首页</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">{{copyright}}</view>
            </view>
        </view>
    </view>
</view>