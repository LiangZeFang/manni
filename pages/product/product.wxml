<import src="/widget/quantity/index.wxml" />
<import src="../../wxParse/wxParse.wxml" />
<view class='product-info'>
<button class='forward' open-type="share" hover-class='none'>
<image src='../../images/forward.jpg'></image>
</button>
<view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">商品</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">详情</view>
</view>
 
<swiper current="{{currentTab}}" duration="300"  bindchange="swiperTab" class='containercontent'>
    <swiper-item >
       <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='productintro' indicator-active-color="#3186ad">
      <swiper-item>
        <image src="{{info.cover_img}}" class="slide-image" />
      </swiper-item>
      <block wx:for="{{info.images}}">
        <swiper-item>
            <image src="{{item.image_url}}" class="slide-image" />
        </swiper-item>
      </block>
  </swiper>
    <view class='details'>
      <view class='details_base'>
      <view class='baseinfo'>
        <text class='price'><text class='fuhao'>￥</text>{{info.price}}</text><text class='pastprice'>{{info.min_title}}</text>
      </view>
        <view class='baseimg' bindtap='collectedStar' data-pid='{{info.product_id}}' data-collected='{{!info.collected}}'>
          <image src='../../images/lik.jpg' hidden='{{!info.collected}}'></image>
          <image src='../../images/like.jpg' hidden='{{info.collected}}'></image>
        </view>
        <button class='forward' open-type="share" hover-class='none'>
            <image src='../../images/forward2.jpg'></image>
        </button>
        <text class='title'>{{info.title}}</text>
      </view>
      <view class='details_size'>
        <view class='size'>
          <label>规格</label><text hidden='{{hideInfo}}'>请选择商品规格</text><text>{{skus}}</text>
        </view>
        <view class='arrow' bindtap="selectAddress">></view>
      </view>
      <view class='details_service'>
        <view class='service-item'>
         <image src='../../images/right.jpg'></image>
         <text>七天无理由退货</text>
        </view>
           <view class='service-item'>
         <image src='../../images/right.jpg'></image>
         <text>包邮</text>
        </view>
      </view>
    </view>
   <view class='details_intro'>
        <view class="tab">  
  <view class="tab-left" bindtap="tabFun">  
    <view class="{{tabArr.curHdIndex=='0'? 'active' : ''}}" id="tab-hd01" data-id="0">商品介绍</view>  
    <view class="{{tabArr.curHdIndex=='1'? 'active' : ''}}" id="tab-hd02" data-id="1">商品评价</view>  
 
  </view>  
  
  <view class="tab-right">  
    <view class="right-item {{tabArr.curBdIndex=='0'? 'active' : ''}}" wx:if="{{info.content}}">
        <template is="wxParse" data="{{wxParseData:content.nodes}}" />
    </view>  
    <view class="right-item {{tabArr.curBdIndex=='1'? 'active' : ''}}">
        <view class='product_comment'>
        <view class='commentitem'>
         <view class='commentname'>
           <image src='../../images/name.jpg'></image>
           <text>我来买东西</text>
           </view>
           <view class='commentsort'>
           <text>2018-12-12</text>
           <text>种类：海水珍珠</text>
           <text>分类:7.5-8mm</text>
           </view>
           <view class='commentdesc'>
           光辉伟大
           </view>
        </view>
        <view class='commentitem'>
         <view class='commentname'>
           <image src='../../images/name.jpg'></image>
           <text>我来买东西</text>
           </view>
           <view class='commentsort'>
           <text>2018-12-12</text>
           <text>种类：海水珍珠</text>
           <text>分类:7.5-8mm</text>
           </view>
           <view class='commentdesc'>
           光辉伟大
           </view>
        </view>
        </view>
        
    </view>  
  </view>  
</view>
   </view>
    </swiper-item>
    <swiper-item><view wx:if="{{info.content}}"><template is="wxParse" data="{{wxParseData:content.nodes}}" /></view></swiper-item>
</swiper>
<!--屏幕背景变暗的背景  -->
  <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
<view class="choose" animation="{{animationData}}" wx:if="{{showModalStatus}}">
   <view class='choose-detail'>
      <view class='chooseimg'>
       <image hidden='{{!hideInfo}}' src="{{currentSku.cover_img==''? info.cover_img :currentSku.cover_img}}"></image>
       <image hidden='{{hideInfo}}' src='{{info.cover_img}}'></image>
      </view>
      <view class='choosetxt'>
       <text class='price' hidden='{{!hideInfo}}'><text>￥</text>{{currentSku.price}}</text>
       <text class='price' hidden='{{hideInfo}}'><text>￥</text>{{info.price}}</text>
       <view hidden='{{!hideInfo}}'>{{selection}}</view>
      </view>
      <view class='Close' bindtap="hideModal" wx:if="{{showModalStatus}}">+</view>
   </view>
   <view class='format' wx:if="{{vid}}">
 <block wx:for="{{vid}}" wx:for-item="attrValueObj" wx:for-index="attrIndex">
     <view class='item'>
     <text>{{attrValueObj.attrKey}}</text>
     <view class='fortmatchoose'>
        <view class="p_s_sku_btn {{attrIndex == firstIndex || attrValueObj.attrValueStatus[valueIndex] ? (attrValueObj.attrVids[valueIndex] == attrValueObj.selectedValue ? 'active' : '') : 'bans'}}" bindtap="selectAttrValue" data-status="{{attrValueObj.attrValueStatus[valueIndex]}}"
                            data-value="{{attrValueObj.attrVids[valueIndex]}}" data-key="{{attrValueObj.attrKey}}" data-index="{{attrIndex}}" data-selectedvalue="{{attrValueObj.selectedValue}}" wx:for="{{attrValueObj.attrValues}}" wx:for-item="value" wx:for-index="valueIndex">{{value}}</view>
     </view>
      </view>
</block>
   </view>
   <view class='count'>
    <text class='counttitle'>购买数量</text>
    <view class='plus'>
      <template is="zan-quantity" data="{{ ...detailQuantity, componentId: 'detailQuantity'}}" />
    </view>
   </view>
   <view class='comfirm' bindtap='submit' data-pid="{{info.product_id}}" data-quantity="{{quantity}}" data-num='{{shopcartNum}}' data-buynow='{{false}}'>确认</view>
</view>
</view>