
page {
    background: #f5f5f5;
}

.right-box {
    position: relative;
    padding-right: 90rpx;
    padding-top: 70rpx;
    width: 30%;
    text-align: right;
}

.mycart{
    position: absolute;
    top:140rpx;
    right:80rpx;
    font-size: 20rpx;
    color:#999
}

.left-box {
    display: flex;
    align-items: flex-end;
    width: 70%;
    padding-left: 40rpx;
    padding-top: 20rpx;
}

.me-header {
    display: flex;
    width: 750rpx;
    padding-bottom: 30rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #ececec
}

.header-shopcart {
    position: relative;
    display: inline-block;
    height: 32rpx;
    width: 32rpx;
    margin:0 auto;
    line-height: 32rpx;
    border-radius: 50%;
    background-color: #092d69;
    color: #fff;
    font-size: 18rpx;
    margin-left: 50rpx;
    text-align: center;
}

.header-shopcart::before {
    position: absolute;
    top: 20rpx;
    left: -20px;
    font-size: 26px;
    color: #092d69;
}

.order-body {
    display: flex;
}

.me-header image.header-pic {
    width: 128rpx !important;
    height: 128rpx;
    border-radius: 50%;
    margin: 30rpx 0 10rpx 0;
    border: 2px solid #fff;
}

.me-header text.header-name {
    font-size: 40rpx;
    color: #333;
    display: block;
    padding: 10rpx 20rpx;
    margin-bottom: 10rpx;
}

.block {
    display: block;
    color: #8b8b8b;
}

.scroll-section {
    width: 750rpx;
    overflow-x: visible;
}

scroll-view {
    width: 700rpx;
    height: 100rpx;
    margin: 0 auto;
    border-bottom: 1px solid #dedede;
}

.scroll-view-item {
    width: 175rpx;
    height: 100rpx;
    display: inline-block;
    text-align: center;
}

.page__bd {
    padding: 0 30rpx 30rpx 30rpx;
}

.order-list {
    background: #fff;
    margin-top: 30rpx;
    padding-top: 20rpx;
    border-radius: 4rpx;
}

.order-header {
    position: relative;
    display: flex;
    padding: 0 30rpx 0 40rpx;
    font-size: 28rpx;
}

.order-header .text-order-status {
    font-weight: bold;
    font-size: 22rpx;
}

.order-header .text-order-date {
    position: absolute;
    right: 30rpx;
    font-size: 18rpx;
    color: #aaa;
}

.product-list {
    display: flex;
    width: 620rpx;
    margin: 0 auto;
    padding: 10rpx 0;
}

.product-img {
    width: 120rpx;
    margin: 0 20rpx 0 0;
}

.product-img image {
    width: 100%;
    height: 120rpx;
}

.product-text {
    position: relative;
    width: 480rpx;
}

.product-text .price {
    font-weight: bold;
}

.product-text .product-number {
    position: absolute;
    top: 0;
    right: 0;
    color: #aaa;
}

.active {
    color: #092d69;
}

.order-total {
    display: flex;
}

.order-total-item {
    width: 25%;
    text-align: center;
}

.order-btn {
    position: relative;
    display: flex;
    padding: 0 36rpx 20rpx;
    line-height: 55rpx;
}

.order-button{
    position:absolute;
    right: 30rpx
}

.button {
    display: inline-block;
    height: 50rpx;
    line-height: 55rpx;
    padding: 0 30rpx;
    margin-left: 30rpx;
    border-radius: 34rpx;
    color: #fff;
    font-size: 18rpx;
    background-color: #092d69;
}

.cancel {
    color: #999;
    background-color: transparent;
    height: 46rpx;
    padding: 0 26rpx;
    line-height: 50rpx;
    border: 1rpx solid #ccc;
}

.total_price{
    font-weight:bold
}

.complete{
    background-color:transparent;
    color:#666;
}



.lineBox{position:relative;width:100%;font-size: 26rpx; padding:20rpx 0; background: #fff; line-height: 2.2; display: flex;}
.lineBox .lb-cell{font-size: 22rpx; color: #ccc; right: 20rpx; padding-top: 4rpx;}
.mb20{margin-bottom: 20rpx;}
.mb5{margin-bottom: 2rpx;}
.pb0{padding-left: 0; padding-right: 0;}
.flex-row{flex-direction: row;}
.btnicon{width: 100%; text-align: center;}
.btnicon .icon{padding: 0 10rpx; width: 64rpx !important; height: 64rpx;}
.block{display: block; color: #8b8b8b;}


.icon-box {
    display: inline-block;
    padding:0 30rpx;
    height: 60rpx;
    width: 60rpx;
}

.icon-box image{
    height: 60rpx;
    width: 60rpx;
}

.icon-arrowll-copy::after{
    position: absolute;
    right: 80rpx;
    top:24rpx;
    color: #ccc
}

.footer{
    padding-top:50rpx
}
